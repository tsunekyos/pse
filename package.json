{
  "license": "MIT",
  "scripts": {
    "brsync": "browser-sync start -s 'dest' -f '**/*'",
    "init": "mkdirp ./dest/asset/css ./dest/asset/script ./dest/asset/images",
    "watch:pug": "pug src/pug -o dest/ -b ./src/pug --pretty -w",
    "watch:scss": "node-sass src/scss/ -o dest/asset/css/ -w",
    "watch:script": "webpack -w --mode=development",
    "watch:image": "cpx \"src/images/*.*\" dest/asset/images -w",
    "watch": "run-s init && run-p brsync watch:*",
    "build:pug": "pug src/pug -o dest/ -b ./src/pug --pretty",
    "build:scss": "node-sass src/scss/ -o dest/css/asset/",
    "build:script": "webpack --mode=production",
    "build": "run-s init && run-p build:*"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "cpx": "^1.5.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "pug-cli": "https://github.com/pugjs/pug-cli.git",
    "pug-lint": "^2.5.0",
    "sass-lint": "^1.12.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "jquery": "^3.3.1"
  }
}
